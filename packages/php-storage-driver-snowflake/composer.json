{
    "name": "keboola/storage-driver-snowflake",
    "description": "Keboola Snowflake driver",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../php-storage-driver-common"
        }
    ],
    "require": {
        "php": "^8.2",
        "keboola/key-generator": "^1.0",
        "keboola/storage-driver-common": "dev-main",
        "keboola/table-backend-utils": ">=3"
    },
    "require-dev": {
        "keboola/coding-standard": "^15",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\StorageDriver\\Snowflake\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\StorageDriver\\Snowflake\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests-functional": "phpunit --testsuite functional",
        "tests-unit": "phpunit --testsuite unit",
        "tests": [
            "@tests-unit",
            "@tests-functional"
        ],
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -s -n --extensions=php .",
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "check": [
            "@composer validate --no-check-all --strict",
            "@phpcs",
            "@phpstan"
        ],
        "ci": [
            "@check",
            "@tests"
        ]
    },
    "config": {
        "lock": false,
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
