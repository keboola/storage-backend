{
    "name": "keboola/db-import-export",
    "description": "Package allows to import files to Snowflake from multiple cloud storages",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "doctrine/dbal": "^2.9",
        "keboola/csv-options": "^1",
        "keboola/php-csv-db-import": "^5.0",
        "microsoft/azure-storage-blob": "^1.4"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "keboola/coding-standard": "9.0.*",
        "keboola/datadir-tests": "^2.0",
        "keboola/php-temp": "^1.0",
        "phpstan/phpstan-phpunit": "^0.11.2",
        "phpstan/phpstan-shim": "^0.11.2",
        "phpunit/phpunit": "^7.0",
        "symfony/process": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\Db\\ImportExport\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Keboola\\Db\\ImportExport\\": "tests/",
            "Tests\\Keboola\\Db\\ImportExportUnit\\": "tests/unit",
            "Tests\\Keboola\\Db\\ImportExportFunctional\\": "tests/functional/"
        }
    },
    "scripts": {
        "tests-unit": "phpunit --colors=always --testsuite unit",
        "tests-snowflake": "phpunit --colors=always --testsuite snowflake",
        "tests-synapse": "CREDENTIALS_IMPORT_TYPE=SAS CREDENTIALS_EXPORT_TYPE=MASTER_KEY TEMP_TABLE_TYPE=HEAP phpunit --colors=always --testsuite synapse",
        "tests-synapse-columnstoretemp": "CREDENTIALS_IMPORT_TYPE=SAS CREDENTIALS_EXPORT_TYPE=MASTER_KEY TEMP_TABLE_TYPE=COLUMNSTORE phpunit --colors=always --testsuite tests-synapse-columnstoretemp",
        "tests-synapse-heap4000": "CREDENTIALS_IMPORT_TYPE=SAS CREDENTIALS_EXPORT_TYPE=MASTER_KEY TEMP_TABLE_TYPE=HEAP4000 phpunit --colors=always --testsuite tests-synapse-columnstoretemp",
        "tests-synapse-clusterdindextemp": "CREDENTIALS_IMPORT_TYPE=SAS CREDENTIALS_EXPORT_TYPE=MASTER_KEY TEMP_TABLE_TYPE=CLUSTERED_INDEX phpunit --colors=always --testsuite tests-synapse-clusterdindextemp",
        "tests-synapse-mi": "CREDENTIALS_IMPORT_TYPE=MANAGED_IDENTITY CREDENTIALS_EXPORT_TYPE=MANAGED_IDENTITY TEMP_TABLE_TYPE=HEAP phpunit --colors=always --testsuite synapse-mi",
        "tests-functional": [
            "@tests-snowflake",
            "@tests-synapse",
            "@tests-synapse-mi",
            "@tests-synapse-columnstoretemp",
            "@tests-synapse-clusterdindextemp",
            "@tests-synapse-heap4000"
        ],
        "tests": [
            "@tests-unit",
            "@tests-functional"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "loadAbs": "php ./tests/loadAbs.php",
        "init-synapse": "php ./tests/InitSynapse.php",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@loadAbs",
            "@tests-unit"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}

